                                    <button type="submit" class="btn btn-default">
                                        <span class="glyphicon glyphicon-search">
                                            <span class="sr-only">Wat zoek je?</span>
                                        </span>
                                    </button>
                                </span>
                            </div>
                        </form>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>
