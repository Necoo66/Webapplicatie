    <div class="row">
        <div class="col-md-3 filterOpties">
            <form asp-controller="Bruid" asp-action="Categorie">
                @foreach(var x in Model.Merken)
                {
                    <input type="checkbox" value="@x.Id" name="merken"/> <label>@x.Naam</label> 
                    <br>

                }
                <button type="submit">VERZENDEN!</button>
            </form>
        </div>

        <div class="col-md-9 jurkenOverzicht">
