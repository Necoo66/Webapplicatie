@model HoneymoonShop.Models.GebruikerModels.AfspraakMaken
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="content">
    <div class="row">
        <div class="title">
            <h1>@Html.DisplayFor(model => model.Afspraak.AfspraakSoort)</h1>
            <h2 class="text-uppercase">Maak Je Pasafsrpaak</h2>
        </div>
    </div>
    <div class="hidden">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    </div>
    <div class="row">
        <div class="afspraakmaken">
            <div class="menu">
                <div class="tab" id="stap1" style="display: block;">
                    <ul>
                        <li><button onclick="ToggelPages('stap1', 'stap2', 'stap3')">1</button><br />Datum en tijd selecteren</li>
                    </ul>
                    <div class="gray">
                        <ul>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li><button onclick="ToggelPages('stap2', 'stap1', 'stap3')">2</button><br /><span>Gegevens invullen</span></li>
                            <li>|</li>
                            <li><button onclick="ToggelPages('stap3', 'stap1', 'stap2')">3</button><br /><span>Gegevens controleren</span></li>
                        </ul>
                    </div>
                </div>
                <div class="tab" id="stap2" style="display: none;">
                    <div class="lightcoral">
                        <ul>
                            <li><button onclick="ToggelPages('stap1', 'stap2', 'stap3')">1</button><br />Datum en tijd selecteren</li>
                            <li>|</li>
                        </ul>
                    </div>
                    <ul>
                        <li><button onclick="ToggelPages('stap2', 'stap1', 'stap3')">2</button><br /><span>Gegevens invullen</span></li>
                    </ul>
                    <div class="gray">
                        <ul>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li>|</li>
                            <li><button onclick="ToggelPages('stap3', 'stap1', 'stap2')">3</button><br /><span>Gegevens controleren</span></li>
                        </ul>
                    </div>
                </div>
                <div class="tab" id="stap3" style="display: none;">
                    <div class="lightcoral">
                        <ul>
                            <li><button onclick="ToggelPages('stap1', 'stap2', 'stap3')">1</button><br />Datum en tijd selecteren</li>
                            <li>|</li>
                            <li><button onclick="ToggelPages('stap2', 'stap1', 'stap3')">2</button><br /><span>Gegevens invullen</span></li>
                            <li>|</li>
                        </ul>
                    </div>
                    <ul>
                        <li><button onclick="ToggelPages('stap3', 'stap1', 'stap2')">3</button><br /><span>Gegevens controleren</span></li>
                    </ul>
                </div>
            </div>
            <div class="left">
                <div class="tab" id="stap1" style="display: block;">
                    <h4>Stap 1, Datum en tijd selecteren</h4>
                    <div class="datumentijdselecteren">
                        <p>Selecteer eerst een datum en vervolgens een tijdstip dat je wilt komen passen!</p>
                        <br />
                        <br />
                        <p>Openingstijden:</p>
                        <table>
                            <tr>
                                <td>MA</td>
                                <td>12:00-17:30</td>
                            </tr>
                            <tr>
                                <td>DI-VR</td>
                                <td>09:30-17:30</td>
                            </tr>
                            <tr>
                                <td>ZA</td>
                                <td>09:30-18:00</td>
                            </tr>
                            <tr>
                                <td>ZO</td>
                                <td>11:00-17:00</td>
                            </tr>
                        </table>
                        <br>
                        <span>Op alle werkdagen kunnen er ook schoenen worden gepast. Helaas is dit niet mogelijk in het weekend.</span>
                        <button class="text-uppercase" id="ButtonStap2" type="button" style="display: none;"> Naar stap 2 </button>
                    </div>
                </div>
                <div class="tab" id="stap2" style="display: none;">
                    <h4>Stap 2, Gegevens invullen</h4>
                    <form asp-action="Maken" id="myForm" data-ajax="true" data-ajax-method="POST">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label asp-for="Gebruiker.VoornaamAchternaam" class="col-md-12"></label>
                                <div class="col-md-12">
                                    <input asp-for="Gebruiker.VoornaamAchternaam" type="text" class="form-control" />
                                    <span asp-validation-for="Gebruiker.VoornaamAchternaam" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gebruiker.Trouwdatum" class="col-md-12"></label>
                                <div class="col-md-12">
                                    <input asp-for="Gebruiker.Trouwdatum" type="date" value="" class="form-control" />
                                    <span asp-validation-for="Gebruiker.Trouwdatum" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gebruiker.Telefoonnummer" class="col-md-12"></label>
                                <div class="col-md-12">
                                    <input asp-for="Gebruiker.Telefoonnummer" type="tel" class="form-control" />
                                    <span asp-validation-for="Gebruiker.Telefoonnummer" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gebruiker.Email" class="col-md-12"></label>
                                <div class="col-md-12">
                                    <input asp-for="Gebruiker.Email" type="email" class="form-control emailCheck1" />
                                    <span asp-validation-for="Gebruiker.Email" id="email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Gebruiker.EmailBevestiging" class="col-md-12"></label>
                                <div class="col-md-12">
                                    <input asp-for="Gebruiker.EmailBevestiging" type="email" class="form-control" />
                                    <span asp-validation-for="Gebruiker.EmailBevestiging" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <div class="checkbox">
                                        <input asp-for="Gebruiker.Nieuwsbrief" />
                                        <label asp-for="Gebruiker.Nieuwsbrief"></label>
                                    </div>
                                </div>
                            </div>
                            <input asp-for="Afspraak.Datum" type="hidden" value="19-05-2016" />
                            <input asp-for="Afspraak.Tijd" type="hidden" value="10.41" />
                            <input asp-for="Afspraak.AfspraakSoort" type="hidden" value="@ViewData["afspraakSoort"]" />

                            <div class="form-group">
                                <div class="col-md-12">
                                    <button class="text-uppercase" id="ButtonStap3" type="submit"> Naar stap 3 </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="tab" id="stap3" style="display: none;">
                    <h4>Stap 3, Gegevens controleren</h4>
                    <p>
                        Controleer alle gegevens voor je pasafspraak bij Honeymoon shop aan
                        Korte Hoogstraat 4, te Rotterdam
                    </p>
                    <button class="text-uppercase" type="submit"> AFSPRAAK BEVESTIGEN </button>
                </div>
            </div>
            <div class="right">
                <div class="tab" id="stap1a" style="display: block;">
                    <h4><img src="~/images/heart-icon.png" />Selecteer een datum:</h4>
                    <div id="datepicker"></div>
                    <span onclick="toggleSelecteerTijd('stap1a', 'stap1b', 'ButtonStap2')">Selecteer een tijd <img src="~/images/pijl.png" alt="Alternate Text" /></span>
                </div>
                <div class="tab" id="stap1b" style="display: none;">
                    <h4><img src="~/images/heart-icon.png" />Selecteer een tijdstip:</h4>
                    <span style="display: block">
                        <input asp-for="Afspraak.Tijd" type="radio" id="radio1" value="9:30" />
                        <label asp-for="Afspraak.Tijd">09 : 30</label>
                    </span>
                    <span style="display: block">
                        <input asp-for="Afspraak.Tijd" type="radio" id="radio2" value="12:30" />
                        <label asp-for="Afspraak.Tijd">12 : 30</label>
                    </span>
                    <span style="display: block">
                        <input asp-for="Afspraak.Tijd" type="radio" id="radio3" value="15:00" />
                        <label asp-for="Afspraak.Tijd">15 : 00</label>
                    </span>
                    <span onclick="toggleSelecteerTijd('stap1a', 'stap1b', 'ButtonStap2')"><img src="~/images/pijllinks.png" alt="Alternate Text" />Terug naar datum selecteren </span>
                </div>
                <div class="tab" id="stap2" style="display: none;">
                    <h4><img src="~/images/heart-icon.png" />Gekozen tijd en datum: </h4>
                    <div class="col-md-12 backgroundLichtRoze well-sm gekozenDatum">
                        <h4>DO 15 September 2016 om 09:30 u</h4>
                    </div>
                    <p class="col-md-12"> Vul je persoonlijke gegevens in om de pasafspraak compleet te maken</p>
                </div>
                <div class="tab" id="stap3" style="display: none;">
                    <h4><img src="~/images/heart-icon.png" />Controleer je gegevens</h4>
                </div>
            </div>
        </div>
    </div>
</div>
