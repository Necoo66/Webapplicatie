@model HoneymoonShop.Models.GebruikerModels.Afspraak

@{
    ViewData["Title"] = "Delete";
}
<div class="content">
    @await Html.PartialAsync("_LoginPartial")
    <div class="row">
        <div class="title">
            <h1>Afspraak</h1>
            <h2 class="text-uppercase">Delete, Weet u het zeker?</h2>
        </div>
    </div>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.AfspraakSoort)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AfspraakSoort)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Datum)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Datum)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Tijd)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tijd)
            </dd>
        </dl>

        <form asp-action="Delete" class="spacer">
            <div class="col-md-6">
                <a class="knop" asp-action="Index">Terug naar afspraken</a>
            </div>
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="knop" />
            </div>
        </form>
    </div>
</div>
