@model HoneymoonShop.Models.Bruid.Product

<link rel="stylesheet" href="~/css/bruid.css" />

<div class="container">
    <div class="row">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a class="active" href="@Url.Action("index","home")">Home</a></li>
            <li class="breadcrumb-item"><a class="active" href="@Url.Action("Bruid","home")">Bruid</a></li>
            <li class="breadcrumb-item"><a class="active" href="@Url.Action("Categorie","Bruid")">Dressfinder</a></li>
            <li class="breadcrumb-item"><a class="active" href="@Url.Action("Categorie","Bruid")">@Model.Categorie.Naam</a></li>
            <li class="breadcrumb-item active">@Model.Merk.Naam</li>
        </ol>
    </div>

    <div class="row spacer">
        <a asp-action="Categorie" asp-controller="Bruid">
            <img src="~/images/Arrow.png" alt="Terug naar overzicht" style="transform: scaleX(-1);width: 60px;">
            <u>Terug naar overzicht</u>
        </a>
    </div>

    <div class="row spacer">
        <div class="col-md-3 afbeelding-kiezen">
             <div>
                <img src="~/images/Producten/Trouwjurken/@(Model.ArtikelNummer + "_1_" + Model.Product_X_Kenmerk.ToList().Where(x => x.Kenmerk.Type.Equals("Kleur")).First().Kenmerk.Naam + ".jpg")" class="img-responsive side-img" onclick="document.getElementById('big-image').src = this.src;">
            </div>
            <div>
                <img src="~/images/Producten/Trouwjurken/@(Model.ArtikelNummer + "_2_" + Model.Product_X_Kenmerk.ToList().Where(x => x.Kenmerk.Type.Equals("Kleur")).First().Kenmerk.Naam + ".jpg")" class="img-responsive side-img" onclick="document.getElementById('big-image').src = this.src;">
            </div>
            <div>
                <img src="~/images/Producten/Trouwjurken/@(Model.ArtikelNummer + "_3_" + Model.Product_X_Kenmerk.ToList().Where(x => x.Kenmerk.Type.Equals("Kleur")).First().Kenmerk.Naam + ".jpg")" class="img-responsive side-img" onclick="document.getElementById('big-image').src = this.src;">
            </div>
        </div>

        <div class="col-md-6">
            <img src="~/images/Producten/Trouwjurken/@(Model.ArtikelNummer + "_1_" + Model.Product_X_Kenmerk.ToList().Where(x => x.Kenmerk.Type.Equals("Kleur")).First().Kenmerk.Naam + ".jpg")" id="big-image" alt="Jurk afbeelding" class="img-responsive">
        </div>

        <div class="col-md-3">
            <h2>@Model.Merk.Naam</h2>
            <span>Artikel nr. @Model.ArtikelNummer</span>
            <p>@Model.Beschrijving</p>
            <br>
            <ul>
                <li>
                    Merk:<a href="#">@Model.Merk.Naam</a>
                </li>
                <li>
                    Kenmerken:
                    @foreach (var x in Model.Product_X_Kenmerk)
                    {
                        @if (!x.Kenmerk.Type.Equals("Kleur"))
                        {
                            <a asp-action="Categorie">@x.Kenmerk.Naam,</a>
                        }
                        
                    }
                </li>
                <li>Prijsindicatie: €@Model.Prijs</li>
                <li>
                    Beschikbare kleuren:

                    @foreach (var x in Model.Product_X_Kenmerk)
                    {
                        @if (x.Kenmerk.Type.Equals("Kleur"))
                        {

                            var y = (HoneymoonShop.Models.Bruid.Kleur)x.Kenmerk;

                            <span href="#" class="kleur-bolletje" style="background-color:#@y.Kleurcode" onclick='changeImage("@x.Kenmerk.Naam")'></span>
                        }
                    }

                </li>
            </ul>
            <script language="javascript">
                var artikelnr = @Model.ArtikelNummer;
                function changeImage(kleur) {
                    var paden = document.getElementsByClassName("side-img");
                    for(var i = 0; i < paden.length; i++){
                        var pad = '/images/Producten/Trouwjurken/' + artikelnr + "_" + (i+1) + "_" + kleur + ".jpg";
                        console.log(pad);
                        paden[i].src = pad;
                    }
                    document.getElementById("big-image").src = '/images/Producten/Trouwjurken/' + artikelnr + "_" + 1 + "_" + kleur + ".jpg";

                }
            </script>

            <br><br>
            <p> Kom deze jurk passen!</p>
            <a asp-controller="Afspraak" asp-action="Index" class="knop">PASAFSPRAAK MAKEN</a>
        </div>
    </div>

    <div class="row spacer">
        <div class="col-md-12">
            <h2 class="sub-titel"><span>Bijpassende sieraden</span></h2>
        </div>
        <div class="col-md-3">
            <img src="~/images/Producten/Sieraden/a2-6-650-mf-7.jpg" class="img-responsive">
            <h4>Abrazi</h4>
        </div>
        <div class="col-md-3">
