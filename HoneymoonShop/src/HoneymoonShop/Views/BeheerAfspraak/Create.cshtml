@model HoneymoonShop.Models.GebruikerModels.Afspraak

@{
    ViewData["Title"] = "Create";
}
<div class="content">
    @await Html.PartialAsync("_LoginPartial")
    <div class="row">
        <div class="title">
            <h1>Afspraak</h1>
            <h2 class="text-uppercase">Create</h2>
        </div>
    </div>
    <form asp-action="Create">
        <div class="form-horizontal">
            <h4>Afspraak</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AfspraakSoort" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="AfspraakSoort" asp-items="ViewBag.SoortAfspraak" class="form-control"></select>
                    <span asp-validation-for="AfspraakSoort" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Datum" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Datum" type="date" class="form-control" />
                    <span asp-validation-for="Datum" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Tijd" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Tijd" class="form-control" />
                    <span asp-validation-for="Tijd" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Gebruiker" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Gebruiker" name="Gebruiker.Id" asp-items="ViewBag.Gebruikers" class="form-control"></select>
                    <span asp-validation-for="Gebruiker" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="knop" />
                </div>
            </div>
        </div>
    </form>

    <div class="row spacer">
        <div class="col-md-12">
            <a class="knop" asp-action="Index">Terug naar afspraken</a>
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>