@model HoneymoonShop.Models.GebruikerModels.Gebruiker

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    @await Html.PartialAsync("_LoginPartial")
    <div class="row">
        <div class="title">
            <h1>KlantGebruiker</h1>
            <h2 class="text-uppercase">Edit</h2>
        </div>
    </div>

    <form asp-action="Edit">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EmailBevestiging" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="EmailBevestiging" class="form-control" />
                    <span asp-validation-for="EmailBevestiging" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        <input asp-for="Nieuwsbrief" />
                        <label asp-for="Nieuwsbrief"></label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Telefoonnummer" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Telefoonnummer" class="form-control" />
                    <span asp-validation-for="Telefoonnummer" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Trouwdatum" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="Trouwdatum" class="form-control" />
                    <span asp-validation-for="Trouwdatum" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="VoornaamAchternaam" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="VoornaamAchternaam" class="form-control" />
                    <span asp-validation-for="VoornaamAchternaam" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="knop" />
                </div>
            </div>
        </div>
    </form>

    <div class="row spacer">
        <div class="col-md-12">
            <a class="knop" asp-action="Index">Terug naar KlantGebruikers</a>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>