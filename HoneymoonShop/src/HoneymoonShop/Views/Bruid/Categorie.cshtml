                <h5>Sorteren op: </h5>
                <select name="sortingOptie">
                    <option value="prijsHoogNaarLaag">Prijs hoog - laag</option>
                    <option value="prijsLaagNaarHoog">Prijs laag - hoog</option>
                    <option value="merkAZ">Merk A - Z</option>
                    <option value="merkZA">Merk Z - A</option>
                </select>
            </div>

